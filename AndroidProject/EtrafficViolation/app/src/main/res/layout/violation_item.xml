<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="@dimen/layout_v_l_details_padding"
    android:layout_marginBottom="@dimen/layout_v_l_details_padding"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_margin="@dimen/items_group"
        android:visibility="gone"
        android:id="@+id/layout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:id="@+id/txtViewViolationID"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_margin="@dimen/items_group"

        android:layout_alignParentLeft="true"
        android:id="@+id/layout2"
        android:layout_width="wrap_content"
        android:layout_below="@id/layout1"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_marginRight="@dimen/item_name_margin_right"
            android:textColor="@color/item_name_color"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="@string/str_violation"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtViewViolation"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/str_violation"/>
    </LinearLayout>

    <LinearLayout
        android:layout_margin="@dimen/items_group"

        android:id="@+id/layout3"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_marginRight="@dimen/item_name_margin_right"
            android:textColor="@color/item_name_color"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="@string/str_tax"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtViewTax"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/str_tax"/>
    </LinearLayout>


</RelativeLayout>